<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_white_off"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/host_chat_input"
        android:background="#ffffff">

        <TextView
            android:id="@+id/host_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/host_command_buttons_holder"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/host_record_local"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Record Local"/>

        <Button
            android:id="@+id/host_play_local"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Play Local"/>

        <Button
            android:id="@+id/host_record_remote"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Record remote"/>


        <Button
            android:id="@+id/host_play_remote"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Play remote"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/host_command_buttons_holder"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/host_chat_input"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/host_walkitalki"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="WalkiTalki"/>
    </LinearLayout>

    <EditText
        android:id="@+id/host_chat_input"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/host_send_btn"
        android:background="@android:color/darker_gray"
        android:hint="type your message here..."
        android:inputType="text"
        android:maxLines="1"
        android:padding="4dp"/>

    <Button
        android:id="@+id/host_send_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="send"/>

</RelativeLayout>